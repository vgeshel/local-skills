{
  "name": "local-skills",
  "version": "0.1.2",
  "description": "CLI for installing and managing Claude Code skills from plugin marketplaces",
  "packageManager": "pnpm@10.28.2",
  "type": "module",
  "bin": {
    "local-skills": "./dist/bin.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vgeshel/local-skills.git"
  },
  "license": "MIT",
  "keywords": [
    "claude",
    "claude-code",
    "skills",
    "cli"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest --no-file-parallelism",
    "test:run": "vitest run --no-file-parallelism",
    "test:coverage": "vitest run --coverage --no-file-parallelism",
    "format": "prettier --write .",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "gray-matter": "^4.0.3",
    "neverthrow": "^8.2.0",
    "yoctocolors": "^2.1.2",
    "zod": "^4.3.6"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^24.10.9",
    "@vitest/coverage-istanbul": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "tsup": "^8.5.1",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
