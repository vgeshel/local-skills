{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.mts",
    ".claude/skills/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
